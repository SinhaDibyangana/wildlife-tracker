<% title = "Admin Login" %>

<div class="flex flex-col items-center justify-center min-h-screen bg-gray-50 p-4">
  <div class="bg-white shadow-md p-6 rounded-lg w-full max-w-sm">
    <h2 class="text-2xl font-bold text-center mb-4">🛡️ Admin Login</h2>
    <form method="POST" action="/admin/login" class="space-y-4">
      <div>
        <label class="block font-medium">Email:</label>
        <input type="email" name="email" required class="w-full p-2 border rounded" />
      </div>
      <div>
        <label class="block font-medium">Password:</label>
        <input type="password" name="password" required class="w-full p-2 border rounded" />
      </div>
      <button type="submit" class="w-full bg-green-600 text-white p-2 rounded hover:bg-green-700">
        Login
      </button>
    </form>
  </div>
</div>
